<link rel="stylesheet" href="/assets/css/profile.css">

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-image">
            <img src="{{profileImageUrl}}" alt="Profile Image of {{userName}}">
            <form action="/api/profile/upload-photo" method="POST" enctype="multipart/form-data" class="upload-form">
                <label for="profileImage">Change Profile Image:</label>
                <input type="file" id="profileImage" name="profileImage" accept="image/*">
                <button type="submit">Upload Image</button>
            </form>
        </div>
        <div class="profile-info">
            <form id="profileEditForm" action="/api/profile/update/{{userId}}" method="POST">
                <input type="text" name="userName" value="{{userName}}" class="edit-input">
                <textarea name="userDescription">{{userDescription}}</textarea>
                <button type="submit" class="save-btn">Save Changes</button>
            </form>
        </div>
    </div>
    <div class="profile-creations">
        <h2>Creations</h2>
        {{#each creations}}
        <div class="creation-item">
            <a href="/game/{{this.id}}">{{this.title}}</a>
        </div>
        {{/each}}
    </div>
</div>
